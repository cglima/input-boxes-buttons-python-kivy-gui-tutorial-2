<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        padding: 50
        spacing: 20

        Label:
            id: my_label
            text: 'Hello World!'
            font_size: 32

        Button:
            # text: ''
            # font_size: 32
            size_hint: .15, .12
            pos_hint: {'center_x': .5}
            background_color: 1,1,1,1

            on_press: root.hello_on()
            on_release: root.hello_off()

            Image:
                id: my_image
                source: 'image/login.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y